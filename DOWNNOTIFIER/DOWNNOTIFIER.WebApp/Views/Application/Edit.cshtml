@model ApplicationDTO

<script src="~/js/application/application.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @using (Html.BeginForm("Edit", "Application", FormMethod.Post, new { id = "postForm" }))
            {
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <h4>Uygulama Düzenle</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Sıra No</span>
                            @Html.TextBoxFor(x => x.Id, new { type = "text", @class = "form-control disabled", placeholder = "Sıra No", ariaLabel = "Sıra No", disabled = "disabled" })
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Adı</span>
                            @Html.TextBoxFor(x => x.Name, new { type = "text", @class = "form-control", placeholder = "Adı", ariaLabel = "Adı", id = "name", required = "required" })
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Url</span>
                            @Html.TextBoxFor(x => x.Url, new { type = "text", @class = "form-control", placeholder = "Url", ariaLabel = "Url", id = "url", required = "required" })
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Yenileme Süresi</span>
                            @Html.TextBoxFor(x => x.IntervalTime, new { type = "number", @class = "form-control", placeholder = "Yenileme Süresi", ariaLabel = "Yenileme Süresi", id = "intervalTime", required = "required" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="form-check">
                                @Html.CheckBoxFor(x => x.IsActive, new { type = "checkbox", @class = "form-check-input", value = "", id = "isActive" })
                                <label class="form-check-label" for="isActive">
                                    Aktif Mi
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="float-end">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>