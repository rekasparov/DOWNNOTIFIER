@model List<UserDTO>

<script src="~/js/user/user.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4>Kullanıcılar</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="@Url.Action("AddNew","User")" class="btn btn-success">Yeni Ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Sıra No</th>
                        <th>Kullanıcı Rolü</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Aktif Mi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var userRole in Model)
                    {
                        <tr>
                            <td>@userRole.Id</td>
                            <td>@userRole.UserRole.Name</td>
                            <td>@userRole.Name</td>
                            <td>@userRole.Surname</td>
                            <td>@(userRole.IsActive ? "Evet" : "Hayır")</td>
                            <td>
                                <a href="@Url.Action("Edit",new{ id = userRole.Id })" class="btn btn-warning">Düzenle</a>
                                <button class="btn btn-danger" onclick="remove('Kullanıcı','@Url.Action("Delete","User",new{ id = userRole.Id })')">Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>